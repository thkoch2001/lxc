Parent_distribution

case "$(dpkg --print-architecture)" in
	amd64)
		# Usage: Architecture CHOICES CHOICES_C Default
		Architecture "32-bit PC (i386), 64-bit PC (amd64)" "i386, amd64" "amd64"
		;;
esac

